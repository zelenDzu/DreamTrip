                            </Button.ToolTip>
                            <TextBlock Text="?" FontSize="25"/>
                        </Button>

                        <Border  Grid.Row="2"  Height="45" Width="275" Background="White" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" 
                    BorderBrush="#FFD9D9D9" BorderThickness="2" CornerRadius="5">
                            <TextBox Name="tbxEmail" Background="Transparent" TabIndex="8"
                                VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4,4,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                                Height="36" Width="266" Text="{Binding Email}"
                                FontFamily="Yu Gothic UI" FontSize="26" TextWrapping="NoWrap" 
                                BorderBrush="Transparent" BorderThickness="0"
                                SelectionBrush="#FFB1F3EE" TextChanged="tbxEmail_TextChanged" 
                                     Style="{StaticResource placeHolder}" Tag="E-mail"/>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="4" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="30*"/>
                            <RowDefinition Height="30*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Foreground="Black" 
                       Text="Сфера занятости" FontWeight="Medium" FontFamily="Yu Gothic UI Semilight" FontSize="36"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

                        <Border x:Name="borderField" Grid.Row="1" Height="45" Width="275" Background="White"
                        HorizontalAlignment="Left" VerticalAlignment="Center" 
                        BorderBrush="#FFD9D9D9" BorderThickness="2" CornerRadius="5">
                            <ComboBox x:Name="lstField" TabIndex="9"
                              BorderThickness="2" Foreground="Black" 
                              SelectedItem="{Binding ClientWorkField, UpdateSourceTrigger=PropertyChanged}" 
                              Height="45" Width="275"
                              VerticalAlignment="Center" HorizontalAlignment="Center" 
                              FontFamily="Yu Gothic UI" FontSize="26" 
                              SelectionChanged="lstField_SelectionChanged" DropDownClosed="lstField_DropDownClosed">

                                
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>

                            </ComboBox>
                        </Border>

                        <Border x:Name="borderPost" Grid.Row="2" Height="45" Width="275" Background="White"
                        HorizontalAlignment="Left" VerticalAlignment="Center" 
                        BorderBrush="#FFD9D9D9" BorderThickness="2" CornerRadius="5">
                            <ComboBox x:Name="lstPost" TabIndex="10"
                              BorderThickness="2" Foreground="Black" 
                              SelectedItem="{Binding ClientWorkPost, UpdateSourceTrigger=PropertyChanged}" 
                              Height="45" Width="275"
                              VerticalAlignment="Center" HorizontalAlignment="Center" 
                              FontFamily="Yu Gothic UI" FontSize="26">
                                
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>

                            </ComboBox>
                        </Border>

                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="1" Margin="130,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"  Foreground="Black" 
                       Text="Статистика звонков" FontWeight="Medium" FontFamily="Yu Gothic UI Semilight" FontSize="36"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="1" Foreground="#FF5A5A5A" 
                       Text="Всего звонков: " FontWeight="Medium" FontFamily="Yu Gothic UI Semilight" FontSize="32"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

                        <TextBlock Name="tbCallCount" Text="0" Grid.Row="1"  Foreground="#FF00B1B1" Margin="230,0,0,0"
                        FontWeight="Bold" FontFamily="Yu Gothic UI" FontSize="36"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="2" Foreground="#FF5A5A5A" 
                       Text="Последний звонок: " FontWeight="Medium" FontFamily="Yu Gothic UI Semilight" FontSize="32"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

                        <TextBlock Name="tbLastCall" Text="нет" Grid.Row="2"  Foreground="#FF00B1B1" Margin="300,0,0,0"
                        FontWeight="Bold" FontFamily="Yu Gothic UI" FontSize="36"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" Margin="130,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"  Foreground="Black" 
                       Text="Статистика поездок" FontWeight="Medium" FontFamily="Yu Gothic UI Semilight" FontSize="36"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="1" Foreground="#FF5A5A5A" 
                       Text="Всего поездок: " FontWeight="Medium" FontFamily="Yu Gothic UI Semilight" FontSize="32"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

                        <TextBlock Name="tbTripsCount" Text="0" Grid.Row="1"  Foreground="#FF00B1B1" Margin="230,0,0,0"
                        FontWeight="Bold" FontFamily="Yu Gothic UI" FontSize="36"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="2" Foreground="#FF5A5A5A" 
                       Text="Последняя поездка: " FontWeight="Medium" FontFamily="Yu Gothic UI Semilight" FontSize="32"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

                        <TextBlock Name="tbLastTrip" Text="нет" Grid.Row="2"  Foreground="#FF00B1B1" Margin="300,0,0,0"
                        FontWeight="Bold" FontFamily="Yu Gothic UI" FontSize="36"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="3" Foreground="#FF5A5A5A" 
                       Text="Общая стоимость поездок: " FontWeight="Medium" FontFamily="Yu Gothic UI Semilight" FontSize="32"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

                        <TextBlock Name="tbTripsPrice" Text="0 руб." Grid.Row="3"  Foreground="#FF00B1B1" Margin="410,0,0,0"
                        FontWeight="Bold" FontFamily="Yu Gothic UI" FontSize="36"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>


                    </Grid>


                </Grid>

                


            </Grid>
        </Border>
    </Grid>

</UserControl>

